{
  "name": "airman-backend",
  "version": "1.0.0",
  "description": "AIRMAN Core Backend API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
